<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_alarm" app:layout_constraintStart_toEndOf="@+id/icon_alarm"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/icon_alarm"
            app:layout_constraintBottom_toBottomOf="@+id/icon_alarm"
            android:textSize="8sp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/alarm"
            android:id="@+id/icon_alarm"
            app:layout_constraintTop_toTopOf="@+id/list_item" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>