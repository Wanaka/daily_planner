<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/planner_item_rounded_corner"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_title" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/view" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:text="Your activity's name" android:textSize="14sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_sub_title"
            app:layout_constraintStart_toStartOf="@+id/input_title" android:text="A small description"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input_title"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="@+id/input_title"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_close"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:text="@string/close"
            android:background="@null" android:textSize="12sp" android:visibility="visible"/>
    <Button
            android:text="@string/delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/button_delete" app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" style="@style/DeleteButtonStyle"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:visibility="invisible"/>
    <TextView
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="10sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/input_sub_title"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/input_sub_title"/>
    <Spinner
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:id="@+id/drop_down_start_time" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
    />
    <Spinner
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:id="@+id/drop_down_end_time"
            app:layout_constraintStart_toEndOf="@+id/dash"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/dash" app:layout_constraintBottom_toBottomOf="@+id/dash"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dash" app:layout_constraintStart_toEndOf="@+id/drop_down_start_time"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/drop_down_start_time"
            app:layout_constraintBottom_toBottomOf="@+id/drop_down_start_time"/>
    <CheckBox
            android:text="@string/set_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_notification" app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:textSize="10sp" android:checked="false"/>
    <TextView
            android:text="notification time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/set_notification" app:layout_constraintStart_toStartOf="@+id/set_notification"
            app:layout_constraintEnd_toEndOf="@+id/set_notification" android:textSize="8sp"/>
    <Button
            android:text="@string/done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_done"
            app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/drop_down_start_time"
            app:layout_constraintBottom_toBottomOf="@+id/view" style="@style/CreateButtonStyle"
            app:layout_constraintStart_toStartOf="@+id/view"/>
</android.support.constraint.ConstraintLayout>